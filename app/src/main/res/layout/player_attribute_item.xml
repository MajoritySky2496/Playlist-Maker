<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.Guideline

        android:id="@+id/leftBorder"
        style="@style/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent = "0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder"
        style="@style/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent = "0.93" />

    <TextView
        android:id="@+id/attribute_name"
        style="@style/trackInfAtribut"
        tools:text="@string/Duration"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTag="text2Tag" />

    <TextView
        android:id="@+id/attribute_value"
        style="@style/trackInfAtribut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textDirection="rtl"
        android:textColor="?attr/text_color_artistTrack"
        app:layout_constraintBottom_toBottomOf="@+id/attribute_name"
        app:layout_constraintEnd_toStartOf="@+id/rightBorder"
        app:layout_constraintStart_toEndOf="@+id/attribute_name"
        tools:text="5:35" />

</androidx.constraintlayout.widget.ConstraintLayout>