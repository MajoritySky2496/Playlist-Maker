<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:paddingHorizontal="@dimen/layout_16">
 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingBottom="24dp">

     <TextView

         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="start"
         android:fontFamily="@font/ys_display_medium"
         android:textFontWeight="500"
         android:layout_marginStart="46dp"
         android:layout_marginTop="15dp"
         android:text="@string/title_search"
         android:textSize="26sp"
         android:textColor="?attr/settings_text_color"/>
     <ImageView
         android:id="@+id/back_button"
         android:layout_width="@dimen/layout_20"
         android:layout_height="@dimen/layout_20"
         android:layout_marginTop="@dimen/layout_20"
         android:src="@drawable/left_arrow" />


 </FrameLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/corner"
        android:backgroundTint="?attr/screen_edit_text_color"
        android:hint="@string/input_hint"
        android:inputType="text"
        android:maxLength="50"
        android:maxLines="1"
        android:drawableLeft="@drawable/ic_icon_search"
        android:paddingStart="20dp"
        android:paddingEnd="40dp"
        android:drawablePadding="@dimen/padding_top_10"
        android:textColor="@color/black"
        android:textColorHint="?attr/text_color_hint"

        />

    <ImageView
        android:id="@+id/clearIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:paddingEnd="20dp"
        android:src="@drawable/ic_search_cross"
        android:visibility="invisible"
        tools:ignore="UseAppTint"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <ImageView
            android:id="@+id/image_url"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="start"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_placeholder"



            />

        <TextView
            android:id="@+id/artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="54dp"
            android:gravity="center_vertical"
            tools:text="@string/Nirvana"
            android:textColor="@color/black"
            android:fontFamily="@font/ys_text_regular"
            android:textSize="@dimen/layout_16"/>

        <TextView
            android:id="@+id/nameTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="54dp"
            tools:text="@string/SLTS"
            android:textColor="@color/grey"
            android:fontFamily="@font/ys_text_regular"
            android:textSize="11dp"
            android:drawableRight="@drawable/ic_ellipse_1"
            android:drawablePadding="5dp"
            />
        <TextView
            android:id="@+id/timeTack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="174dp"
            tools:text="@string/Nirvana_time"
            android:textColor="@color/grey"
            android:fontFamily="@font/ys_text_regular"
            android:textSize="11dp"/>


        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_terms_of_use"
            android:layout_marginStart="356dp"
            android:layout_gravity="center_vertical"

            />


    </FrameLayout>
</LinearLayout>


