<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <ImageView
        android:id="@+id/yourImage"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="start"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/nameOfPlayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_text_regular"
        android:textColor="?attr/black_and_white"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourImage"
        tools:text="Nirvana" />

    <TextView
        android:id="@+id/numberOfTracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_text_regular"
        android:textColor="?attr/black_and_white"

        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/yourImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nameOfPlayList"
        app:layout_constraintTop_toBottomOf="@+id/nameOfPlayList"
        tools:text="Nirvana" />


</androidx.constraintlayout.widget.ConstraintLayout>