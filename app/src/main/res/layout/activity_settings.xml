<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="64dp"
            android:layout_marginTop="13dp"
            android:text="@string/title_settings"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="normal"
            app:icon="@drawable/ic_icon_search"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@color/black" />


        <ImageButton
            android:layout_width="@dimen/layout_16"
            android:layout_height="@dimen/layout_16"
            android:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/layout_20"
            android:layout_marginStart="@dimen/layout_20"
            android:src="@drawable/left_arrow"/>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/framelayout_margin_bottom">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/dark_theme"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:paddingTop="@dimen/padding_top_10"
            android:paddingStart="@dimen/padding_start_16"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/framelayout_margin_bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/share_app"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:paddingTop="@dimen/padding_top_10"
            android:paddingStart="@dimen/padding_start_16"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_share_app"
            android:paddingTop="@dimen/padding_top_12"
            android:paddingEnd="@dimen/padding_end_21"/>
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/framelayout_margin_bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingStart="@dimen/padding_start_16"
            android:paddingTop="@dimen/padding_top_10"
            android:text="@string/write_to_support"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/write_to_support_1"
            android:paddingTop="@dimen/padding_top_12"
            android:paddingEnd="@dimen/padding_end_21"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="15.5dp"
            android:layout_marginEnd="24.9dp"
            android:src="@drawable/ic_write_to_support_2" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_top_22"
            android:layout_marginEnd="26.9dp"
            android:src="@drawable/ic_write_to_support_3" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_top_22"
            android:layout_marginEnd="32.5dp"
            android:src="@drawable/ic_write_to_support_3" />


    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/framelayout_margin_bottom">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/terms_of_use"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:paddingTop="@dimen/padding_top_10"
            android:paddingStart="@dimen/padding_start_16"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/ic_terms_of_use"
            android:paddingTop="@dimen/padding_top_12"
            android:paddingEnd="@dimen/padding_end_21"/>

    </FrameLayout>
</LinearLayout>